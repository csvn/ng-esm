{
  "name": "ng-esm",
  "version": "0.0.1",
  "description": "Angular for ES2015; use decorators instead of modules.",
  "main": "index.js",
  "scripts": {
    "start": "run-p serve build:watch",
    "serve": "browser-sync start -s . -f dist --no-open",
    "build": "tsc -p .",
    "build:watch": "tsc -w -p .",
    "postinstall": "typings install"
  },
  "keywords": [
    "angular",
    "ES2015",
    "ES6",
    "decorators"
  ],
  "author": "Christian Svensson <csvn.dev@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "angular": "^1.5.7"
  },
  "devDependencies": {
    "browser-sync": "^2.13.0",
    "npm-run-all": "^2.1.2",
    "tslint": "^3.11.0",
    "typescript": "^1.8.10"
  }
}
